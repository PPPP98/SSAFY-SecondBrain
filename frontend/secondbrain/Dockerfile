# ---------- 1) Build stage ----------
FROM node:24-alpine AS builder
RUN apk add --no-cache libc6-compat
WORKDIR /app

# ðŸ‘‡ ë¹Œë“œ ì‹œ ë„˜ê¸¸ ì•± ê²½ë¡œ (ê¸°ë³¸ê°’: í˜„ìž¬ ë””ë ‰í„°ë¦¬)
ARG APP_SUBDIR=.

ENV PNPM_HOME=/usr/local/share/pnpm
ENV PATH=$PNPM_HOME:$PATH
RUN corepack enable && corepack prepare pnpm@9 --activate

# ì˜ì¡´ì„± ì„¤ì¹˜(ìºì‹œ ìµœì í™”)
COPY ${APP_SUBDIR}/package.json ${APP_SUBDIR}/pnpm-lock.yaml ./

RUN pnpm install --frozen-lockfile

# ì†ŒìŠ¤ë§Œ ë³µì‚¬
COPY ${APP_SUBDIR}/ ./

# ë¹Œë“œ (tanstack router ì½”ë“œì   í¬í•¨)
RUN pnpm build
RUN test -f ./src/routeTree.gen.ts || (echo >&2 "âŒ routeTree.gen.tsê°€ ìƒì„±ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤"; exit 1)
RUN test -d ./dist || (echo >&2 "âŒ dist ë””ë ‰í„°ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤"; exit 1)

# ---------- 2) Runtime stage ----------
FROM nginx:1.27-alpine AS runner
COPY --from=builder /app/dist /usr/share/nginx/html
RUN rm -f /etc/nginx/conf.d/default.conf && \
    printf '%s\n' \
    'server {' \
    '  listen 80;' \
    '  server_name _;' \
    '  root /usr/share/nginx/html;' \
    '  index index.html;' \
    '  location ~* \.(?:js|css|png|jpg|jpeg|gif|svg|ico|woff2?)$ { try_files $uri =404; add_header Cache-Control "public, max-age=31536000, immutable"; }' \
    '  location / { try_files $uri $uri/ /index.html; }' \
    '  location = /health { return 200 "ok"; add_header Content-Type text/plain; }' \
    '}' > /etc/nginx/conf.d/app.conf
EXPOSE 80
HEALTHCHECK --interval=30s --timeout=3s --retries=3 CMD wget -qO- http://localhost/health || exit 1
